{
  "manifest_version": 3,
  "name": "Claude Q&A",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "version": "1.0",
  "description": "Ask Claude questions about the current web page",
  "permissions": ["scripting", "storage", "tabs", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "action": {},
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
